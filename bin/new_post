#!/bin/bash

NOW=$(date +'%F %X %z')
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
FNAME=$DIR/../src/content/$(uuidgen).md

cat > $FNAME << EOF
Title: "Default_title"
Date: $NOW
Category: linux
Authors: Andrey Semenov
Tags: Default_tag
EOF

vim $FNAME
echo "New post created as [${FNAME}]"

#pelican -s src/pelicanconf.py src/content -o docs/ -t themes/aboutwilson/
